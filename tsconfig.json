{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "./build",
    "inlineSourceMap": true,
    "importHelpers": true
  },
  "include": [
    "src/*.ts",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "data"
  ]
}
